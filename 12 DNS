import socket
def get_ip_from_domain(domain_name):
    try:
        ip = socket.gethostbyname(domain_name)
        print(f"IP address of {domain_name} is: {ip}")
    except socket.gaierror:
        print("Invalid domain name or unable to resolve.")
def get_domain_from_ip(ip_address):
    try:
        domain = socket.gethostbyaddr(ip_address)
        print(f"Domain name of {ip_address} is: {domain[0]}")
    except socket.herror:
        print("Invalid IP address or no domain name associated.")
while True:
    print("\nDNS Lookup Program")
    print("1. Domain name to IP address")
    print("2. IP address to Domain name")
    print("Type 'exit' or 'stop' to quit the program.")
    choice = input("Enter your choice (1/2): ").strip()
    if choice.lower() in ["exit", "stop"]:
        print("Program stopped.")
        break
    if choice == '1':
        domain_name = input("Enter domain name (e.g., www.google.com): ").strip()
        if domain_name.lower() in ["exit", "stop"]:
            print("Program stopped.")
            break
        get_ip_from_domain(domain_name)
    elif choice == '2':
        ip_address = input("Enter IP address (e.g., 8.8.8.8): ").strip()
        if ip_address.lower() in ["exit", "stop"]:
            print("Program stopped.")
            break
        get_domain_from_ip(ip_address)
    else:
        print("Invalid choice! Please enter 1 or 2.")



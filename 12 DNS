map={}
import socket

def forward_dns():
    url=input("Enter the URL: ")
    try:
        ip = socket.gethostbyname(url)
        map[ip] = url
        print("IP Address: ",ip)
    except socket.gaierror:
        print("Invalid URL.")
        
def reverse_dns():
    ip=input("Enter the IP Address: ")
    if ip in map:
                print("Domain Name:", map[ip])
    else:
        try:
            url=socket.gethostbyaddr(ip)[0]
            print("URL: ",url)
        except socket.herror:
            print("Invalid URL.")

while(1):
    print("DNS Lookup")
    print("1. URL TO IP")
    print("2. IP TO URL")
    print("3. Exit")
    choice=int(input("Enter your choice: "))
    
    if choice==1:
        forward_dns()
    elif choice==2:
        reverse_dns()
    else:
        break
